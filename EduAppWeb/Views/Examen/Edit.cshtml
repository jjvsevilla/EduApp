@model EduAppWeb.Models.Examen.EditExamForm

@{
    ViewBag.Title = "Examen Edit Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Examen - Edit Page</h2>

@using (Html.BeginForm("Edit","Examen",FormMethod.Post, new{@class="form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m=>m.ExamId)
    
    <div class="form-group">
        @Html.LabelFor(m => m.CreatorUserName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <p class="form-control-static">@Model.CreatorUserName</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Curso, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Curso, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Curso, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Carrera, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Carrera, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Carrera, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ExamType, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ExamType, Model.AvailableExamTypes, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ExamType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
